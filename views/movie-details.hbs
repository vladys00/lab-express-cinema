<div id="movie-details">
  <div id="movie-poster">
    <img  src={{movie.image}} alt="movie image" />

  </div>
  <div id="movie-info">
    <a class="btn btn-primary" href="/movies" role="button">Go back</a>
    <h2>{{movie.title}}</h2>
    <p><b>Director:</b>{{movie.director}}</p>
    <ul class="stars">
      <p>Stars</p>
      {{#each movie.stars as |star|}}
        <li>{{star}}</li>
      {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <ul class="showtime">
      {{#each movie.showtimes as |time|}}
        <li> {{time}} | </li>
      {{/each}}
    </ul>
  </div>
</div>
